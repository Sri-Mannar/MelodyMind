datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(cuid())
  name      String?
  email     String    @unique
  password  String
  role      String    @default("user")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now()) @updatedAt

  texts     Text[]
  audios    Audio[]
  sessions  Session[]
}

model Session {
  id           String   @id @default(cuid())
  userId       String
  refreshToken String   @unique
  createdAt    DateTime @default(now())
  expiresAt    DateTime 

  user         User     @relation(fields: [userId], references: [id])
}

model Text {
  id          String    @id @default(cuid())
  title       String
  raw         String
  createdAt   DateTime  @default(now())
  user        User      @relation(fields: [userId], references: [id])
  userId      String

  wordCount   Int?
  syllables   Int?
  sentiment   Float?
  themes      String[]   // arrays cannot be optional
  rhymeScheme String?
  embedding   Float[]    // PostgreSQL float[] array
}

model Audio {
  id        String    @id @default(cuid())
  title     String
  url       String
  durationS Int
  createdAt DateTime  @default(now())
  user      User      @relation(fields: [userId], references: [id])
  userId    String

  bpm       Int?
  key       String?
  energy    Float?
  valence   Float?
  genreTags String[]   // arrays cannot be optional
  embedding Float[]    // PostgreSQL float[] array
}

